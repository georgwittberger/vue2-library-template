{
  "name": "vue-library-template-storybook",
  "version": "1.0.0",
  "description": "Vue.js component library Storybook template",
  "author": "Georg Wittberger",
  "license": "MIT",
  "private": true,
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "start-storybook --port 6006",
    "lint": "eslint --ext .js,.ts,.vue .",
    "lint:fix": "eslint --ext .js,.ts,.vue . --fix",
    "build": "build-storybook --output-dir dist",
    "start": "http-server dist --port 6006",
    "test:run": "concurrently --names \"E2E,VISUAL,A11Y\" \"pnpm test:e2e\" \"pnpm test:visual\" \"pnpm test:a11y\"",
    "test:e2e": "test-storybook",
    "test:visual": "jest tests/visual.test.ts",
    "test:a11y": "jest tests/a11y.test.ts",
    "ci": "pnpm build && pnpm ci:test",
    "ci:test": "concurrently --kill-others --success first --names \"SB,TEST\" --prefix-colors \"magenta,blue\" \"pnpm start --silent\" \"wait-on tcp:6006 && pnpm test:run\""
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "vue": "^2.7.10",
    "vue-library-template-components": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/addon-storyshots": "^6.5.10",
    "@storybook/addon-storyshots-puppeteer": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/core-common": "^6.5.10",
    "@storybook/csf-tools": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/store": "^6.5.10",
    "@storybook/test-runner": "^0.6.4",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/vue": "^6.5.10",
    "@types/jest": "^26.0.24",
    "@types/node": ">=16.0.0",
    "@types/react": "^16.14.30",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "css-loader": "^6.7.1",
    "http-server": "^14.1.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-runner": "^26.6.3",
    "jest-svg-transformer": "^1.0.0",
    "jest-transform-stub": "^2.0.0",
    "jest-vue-preprocessor": "^1.7.1",
    "preact": "^10.10.6",
    "puppeteer": "^16.2.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.8.3",
    "vue-loader": "^15.10.0",
    "vue-template-compiler": "^2.7.10",
    "vue-template-es2015-compiler": "^1.9.1",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
